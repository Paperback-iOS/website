// Custom rules
user-select()
	-webkit-user-select arguments
	-moz-user-select arguments
	-ms-user-select arguments
	user-select arguments

font-feature-settings()
	-webkit-font-feature-settings arguments
	-moz-font-feature-settings arguments
	-ms-font-feature-settings arguments
	font-feature-settings arguments

// Home style
.home
	header.hero
		img
			max-height $heroImageHeight

// List
ul,
ol
	padding-left 2rem

// Element UI Tabs
.el-tabs
	&__content
		background-color #f6f8fd
		padding 2em
		border-radius 8px
	h3
		margin-top 0em
	ol:last-child
		margin-bottom 0em
// Element UI table
.el-table
	tr
		&:nth-child(2n)
			// Use the same color as default tables
			background-color #f6f8fa



// Custom block containers
.custom-block
	&.tip,
	&.warning,
	&.error,
	&.danger
		border-radius $containerBorderRadius
	&.aside
		color transparentify($textColor, 0.4)
		font-size 0.9rem
		text-align right
	&.aside-guide
		font-size 0.9rem
		text-align left
		p
			margin-top 0
		a
			color $accentColorSecondary


//&:nth-child(2n)
  //  background-color #f6f8fa

// Yuu theme changes
.yuu-theme-dark
	.sw-update-popup
		background-color $darkPrimaryBg !important
	a.settings-button
		color $darkTextColor
		&:hover
			color $darkAltTextColor
	.nav-links
		.nav-item
			a.nav-link
				&.router-link-active
					color $darkTextColor
				&:hover
					color $darkAltTextColor
	.dropdown-wrapper
		.nav-dropdown
			li
				&.dropdown-item a
					color $darkAltTextColor
					&.router-link-active,
					&:not(.router-link-active)
						&:hover
							color $darkTextColor
				h4
					border-top 1px solid $darkSecondaryBg
				&:first-child h4
					border-top 0
	.el-tabs
		&__content
			background-color #252525
			border-radius 8px
			h3
				color $accentColor
		&__item
			user-select none
			&.is-active
				color $accentColor
			&:not(.is-active)
				color $darkTextColor
				&:hover
					color $darkAltTextColor
		&__active-bar
			background-color $accentColor
		&__nav-wrap::after
			background-color #313131
	.el-tag
		&--warning
			margin 2px
			background-color #e6a23c0d
			border-color #90611a47
	// Picture dialog windows
	.el-dialog
		background $darkSecondaryBg
		&__title
			color $darkTextColor
		.el-dialog__body
			color $darkTextColor
		table
			// As dialog background color is $darkSecondaryBg, the second cell color need to be overwritten
			tr
				background-color: $darkPrimaryBg;
			tr:nth-child(2n)
				background-color: $darkSecondaryBg;
	// El-loading
	.el-loading-mask
		background-color: $darkPrimaryBg
		opacity: 0.9;
	.guide
		background-color #2a2a2a
	.aside
		color transparentify($darkTextColor, 0.4)
		
	
	
	.el-table
		color: $darkTextColor;
		background-color: $darkPrimaryBg;
		tr
			background-color: $darkPrimaryBg;
		//tr:hover
		//	background-color: $darkSecondaryBg;

		// Remove for two colors table
		//tr:nth-child(2n)								//#fbfdff
		//	background-color: $darkPrimaryBg;
		th
			background-color: $darkPrimaryBg;
			color: $darkTextColor;
	    .el-table__body
			background-color: $darkSecondaryBg
		.el-table--enable-row-hover // overrite
			.el-table__body 
				tr:hover > td {background-color :transparentify($textColor, 0.4) }//{background-color: $darkSecondaryBg}
		th, td
			border-style: none;	// Remove the default borders
	.el-table__row
		tr
			background-color: $purpleAccentColor
	
	//.el-table--enable-row-hover 
	//	.el-table__body 
	//		td:hover
	//			background-color: $darkSecondaryBg
	.el-table--enable-row-hover
		background-color: $darkSecondaryBg
	// Yuu theme colors
	&.yuu-theme-purple
		.el-tabs
			h3
				color $purpleAccentColor
			&__item.is-active
				color $purpleAccentColor
			&__active-bar
				background-color $purpleAccentColor
	&.yuu-theme-red
		.el-tabs
			h3
				color $redAccentColor
			&__item.is-active
				color $redAccentColor
			&__active-bar
				background-color $redAccentColor
	.el-steps
		.el-step__icon.is-text
			background $darkPrimaryBg
		// Active step
		.is-process
			color $darkTextColor
			.el-step__icon
				border-color $darkTextColor

.yuu-theme-purple
	// Upload component
	.el-upload-dragger .el-upload__text em
		color $purpleAccentColor
.yuu-theme-red
	// Upload component
	.el-upload-dragger .el-upload__text em
			color $redAccentColor

// Guide container
.guide
	background-color $containerBackgroundColor
	border-radius $containerBorderRadius
	margin 1rem 0
	padding 0.1rem 1.5rem
	.title
		font-weight bold

// Expander container
.expander
	background-color $containerBackgroundColor
	border-radius $containerBorderRadius
	margin 1rem 0
	padding 1rem 1.5rem
	.expansion
		user-select none
		font-weight bold
		&:focus
			outline none

// Badge styling
.badge
	&.default-indicator
		background-color $accentColor !important
	&.version-indicator
		background-color $badgeVersionColor !important

// Navbar Changes
.navbar
	.site-name.can-hide
		/* Display navbar-name even for small screens */
		@media (max-width: $MQMobile)
			display inherit

.sidebar 
	.nav-links
		.nav-link
			// Enlarge internal links in sidebar
			display block

// Page Header Logo
.headerLogo
	vertical-align middle
	height 3rem
	margin-bottom 0.625rem

// Center align class
.centered
	text-align center

// Bold class
.bold
	font-weight bold

	
    			
